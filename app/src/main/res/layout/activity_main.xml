<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity"
    android:background="@color/colorTheme">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="NeoSTORE"
            android:textColor="@android:color/white"
            android:textSize="@dimen/neoStoreTextSize"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/userNameEditTextView"
            android:layout_marginTop="148px"
            android:padding="10dp"
            android:drawableLeft="@drawable/username_icon"
            android:hint="Username"
            android:textSize="@dimen/loginEditextSize"
            android:drawablePadding="10dp"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_rectangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/passwordEditTextView"
            android:layout_marginTop="50px"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:textSize="@dimen/loginEditextSize"
            android:drawableLeft="@drawable/password_icon"
            android:hint="Password"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_rectangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/submitBtn"
            android:layout_marginTop="100px"
            android:text="Login"
            android:textColor="@color/colorTheme"
            android:background="@drawable/shape_rounded_rectangle"
            android:textSize="78px"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="65px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password?"
            android:textSize="54px"
            android:textColor="@android:color/white"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:text="DON'T have an account?"
            android:textSize="48px"
            android:textStyle="bold"/>
        <ImageButton
            android:id="@+id/signUpButton"
            android:layout_alignParentRight="true"
            android:layout_width="136px"
            android:background="#A50205"
            android:layout_height="136px"
            android:tint="@color/colorWhite"
            android:src="@drawable/plus"
            />
    </RelativeLayout>
</RelativeLayout>