<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTheme"
    tools:context=".Activities.SignUpActivity">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="NeoSTORE"
                android:textColor="@android:color/white"
                android:textSize="@dimen/neoStoreTextSize"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/firstName"
                android:layout_marginTop="108px"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="@dimen/loginEditextSize"
                android:drawableLeft="@drawable/username_icon"
                android:hint="First Name"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:background="@drawable/shape_rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/lastName"
                android:layout_marginTop="40px"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="@dimen/loginEditextSize"
                android:drawableLeft="@drawable/username_icon"
                android:hint="Last Name"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:background="@drawable/shape_rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/email"
                android:layout_marginTop="40px"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="@dimen/loginEditextSize"
                android:drawableLeft="@drawable/email_icon"
                android:hint="Email"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:background="@drawable/shape_rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/password"
                android:layout_marginTop="40px"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="@dimen/loginEditextSize"
                android:drawableLeft="@drawable/password_icon"
                android:hint="Password"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:background="@drawable/shape_rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/confirmPassword"
                android:layout_marginTop="40px"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="@dimen/loginEditextSize"
                android:drawableLeft="@drawable/password_icon"
                android:hint="Confirm Password"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:background="@drawable/shape_rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginTop="69px"
                android:layout_marginBottom="69px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="48px"
                    android:textColor="@android:color/white"/>

                <RadioGroup
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/maleRadioBtn"
                        android:text="Male"
                        android:checked="true"
                        android:textSize="48px"
                        android:buttonTint="@android:color/white"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/femaleRadioBtn"
                        android:text="Female"
                        android:textSize="48px"
                        android:buttonTint="@android:color/white"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RadioGroup>
            </RelativeLayout>

            <EditText
                android:id="@+id/mobileNumber"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="@dimen/loginEditextSize"
                android:drawableLeft="@drawable/cellphone"
                android:hint="Mobile Number"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:background="@drawable/shape_rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:layout_marginTop="69px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="39px"
                android:buttonTint="@android:color/white"
                android:textColor="@android:color/white"
                android:text="@string/terms_and_condition"/>

            <Button
                android:id="@+id/clicked"
                android:layout_marginTop="49px"
                android:layout_width="880px"
                android:layout_height="142px"
                android:text="Register"
                android:textColor="@color/colorTheme"
                android:textAllCaps="true"
                android:background="@drawable/shape_rounded_rectangle"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
</RelativeLayout>