<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/productImageMyCartImageView"
            android:layout_gravity="center"
            android:layout_width="200px"
            android:layout_height="200px"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/productNameMyCartTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:textSize="70px"
                android:textColor="#1C1C1C"
                android:text="Title"/>
            <TextView
                android:id="@+id/productCategoryMyCartTextView"
                android:layout_marginTop="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Table)"/>
            <RelativeLayout
                android:layout_marginTop="15px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px">
                <TextView
                    android:id="@+id/quantityMyCartTextView"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:text="1fffff"
                    android:padding="5dp"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/dropdownarrow"
                    android:background="@drawable/shape_rounded_rectangle"
                    android:backgroundTint="@color/colorWhite"
                    android:layout_height="35dp"/>
                <TextView
                    android:id="@+id/productPriceMyCartTextView"
                    android:layout_centerInParent="true"
                    android:text="$150"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/deleteItem"
            android:layout_gravity="center"
            android:src="@drawable/delete"
            android:layout_width="200px"
            android:layout_height="200px"/>

    </LinearLayout>
</LinearLayout>