<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".Activities.ui.AddAddressActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorAccent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorAccent"
            android:weightSum="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="1dp"
                android:layout_weight="0.1"
                android:tint="@color/colorWhite"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"></ImageView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="69px"
                android:textStyle="bold"
                android:layout_weight="3"
                android:id="@+id/titletext"
                android:text="Add Address"/>

            <ImageView
                android:id="@+id/ivAdd"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:tint="@color/colorWhite"
                android:src="@drawable/plus"/>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
           android:layout_margin="20px"
            android:orientation="vertical"
            android:layout_below="@+id/toolbar"
            android:layout_height="wrap_content">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="ADDRESS"
                android:textColor="@color/text_colour"
                android:textSize="50px"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etAddress"
                android:layout_marginTop="50px"
                android:padding="10px"
                android:textSize="50px"
                android:hint="First Name"
                android:lines="4"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="80px"
                android:text="LANDMARK"
                android:textColor="@color/text_colour"
                android:textSize="50px"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etLandmark"
                android:layout_marginTop="50px"
                android:padding="10px"
                android:textSize="50px"
                android:hint="Landmark"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/layout1"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_margin="20px"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="80px"
                    android:text="CITY"
                    android:textColor="@color/text_colour"
                    android:textSize="50px"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/etCity"
                    android:layout_marginTop="20px"
                    android:padding="10px"
                    android:textSize="50px"
                    android:hint="Mumbai"
                    android:textColorHint="@android:color/black"
                    android:textColor="@android:color/black"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="80px"
                    android:text="ZIP CODE"
                    android:textColor="@color/text_colour"
                    android:textSize="50px"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/etZipCode"
                    android:layout_marginTop="20px"
                    android:padding="10px"
                    android:textSize="50px"
                    android:hint="10066"
                    android:textColorHint="@android:color/black"
                    android:textColor="@android:color/black"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_margin="20px"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="80px"
                    android:text="STATE"
                    android:textColor="@color/text_colour"
                    android:textSize="50px"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/etState"
                    android:layout_marginTop="20px"
                    android:padding="10px"
                    android:textSize="50px"
                    android:hint="MAHARASHTRA"
                    android:textColorHint="@android:color/black"
                    android:textColor="@android:color/black"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="80px"
                    android:text="COUNTRY"
                    android:textColor="@color/text_colour"
                    android:textSize="50px"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/etCountry"
                    android:layout_marginTop="20px"
                    android:padding="10px"
                    android:textSize="50px"
                    android:hint="INDIA"
                    android:textColorHint="@android:color/black"
                    android:textColor="@android:color/black"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

    <Button
        android:id="@+id/saveAddress"
        android:layout_marginTop="80px"
        android:layout_width="match_parent"
        android:layout_height="142px"
        android:layout_margin="20px"
        android:layout_below="@+id/layout2"
        android:gravity="center"
        android:text="Save Address"
        android:textColor="@color/colorWhite"
        android:textAllCaps="true"
        android:background="@drawable/btn_background"/>

</RelativeLayout>